extends layout

block content

    h1=title

    form(method='POST', action='')
        div.form-group
            label(for='name') Genre:
            input#name.form-control(type='text',placeholder='Fantasy,Poetry etc',required='true', name='name', value=(genre===undefined)?'':genre.name)
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul 
            for err in errors
                li!=err.msg